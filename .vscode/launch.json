    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Mocha Tests",
            "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
            "args": [
                "-u",
                "tdd",
                "--timeout",
                "999999",
                "--colors",
                "--reporter",
                "mochawesome",
                "${workspaceFolder}//test//?(7_*|11_*)"
            ],
            "preLaunchTask": "npm: transpile",
            "postDebugTask": "npm: openTestReport",
            "internalConsoleOptions": "openOnSessionStart"
        },
    {
        "type": "node",
        "request": "launch",
        "name": "Upload Patents via NPM",
        "runtimeExecutable": "npm",
        "runtimeArgs": [
            "run",
            "startUpload"
        ],
        "port": 9229
    },
    {
        "type": "node",
        "request": "launch",
        "name": "Test Tedious",
        "program": "${workspaceFolder}\\js\\tedioustest"
    },
    {
        "type": "node",
        "request": "launch",
        "name": "Test ",
        "program": "${workspaceFolder}\\js\\tedioustest"
    },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "program": "${workspaceFolder}\\main.js"
        }
    ]
}